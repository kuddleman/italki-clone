<%= form_for(@hyperglot) do |f| %>
<%= f.label :name %>: <%= f.text_field :name %><br><br>

<p><%= f.label :language_being_studied_1, "1st language you're studying:" %>
<%= f.text_field :language_being_studied_1 %></p><br>

